<decorators defaultdir="/WEB-INF/views/layouts">
	<decorator name="user" page="user.jsp">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="all" page="all.jsp">
		<pattern>/login*</pattern>
		<pattern>/signup*</pattern>
		<pattern>/changepass*</pattern>
		<pattern>/forgotpass*</pattern>
	</decorator>
	<decorator name="error" page="error.jsp">
		<pattern>/error*</pattern>
	</decorator>
</decorators>